<%= render "admin/shared/validation_errors", resource: @admin_password_form %>

<%= form_for(@admin_password_form, as: :admin_password, url: admin_admin_passwords_path, method: :patch) do |f| %>

  <%= f.hidden_field :admin_id %>

  <div class="pure-g">

    <div class="pure-u-1 pure-u-md-16-24">

      <div class="form_item input_text">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div class="form_item input_text">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </div>

    </div>

    <div class="pure-u-1 pure-u-md-2-24"></div>

    <div class="pure-u-1 pure-u-md-1-4 stick_in_parent" id="stick_in_parent">

      <div class="widget_save">

      <%= f.submit "Send", class: "button" %>

      </div>

    </div>

  </div>

<% end %>
