<menu class="complete color_main">
  <div class="column">
    <div class="close">
      <%= link_to "#", class: "color_main" do %>
        <i class="fa fa-close"></i>
      <% end %>
    </div>

    <div class="pure-g">

      <% current_site.configuration.modules.each do |site_module| %>
        <%= render_if_exists "#{site_module.underscore}/layouts/navigation" %>
      <% end %>

      <% pending do %>
        <div class="pure-u-1 pure-u-md-1-4 section">
          <h2>Personas</h2>
          <%= link_to 'Cargos' %>
          <%= link_to 'Agendas' %>
        </div>

        <div class="pure-u-1 pure-u-md-1-4 section">
          <h2>Indicadores</h2>
          <%= link_to 'Tu municipio en cifras' %>
          <%= link_to 'Cuadro de mando' %>
          <%= link_to 'Objetivos' %>
        </div>

        <div class="pure-u-1 pure-u-md-1-4 section">
          <h2>Participación</h2>
          <%= link_to 'Propuestas' %>
          <%= link_to 'Preguntas' %>
          <%= link_to 'Consultas' %>
          <%= link_to 'Legislación colaborativa' %>
        </div>

        <div class="pure-u-1 pure-u-md-1-4 section">
          <h2>Mapas</h2>
          <%= link_to 'Inversiones' %>
          <%= link_to 'Recursos' %>
          <%= link_to 'Instalacioens' %>
        </div>
      <% end %>

      <div class="pure-u-1 pure-u-md-1-4 section personal_menu mobile_only">

        <% if user_signed_in? %>
          <h2>Tu cuenta</h2>
          <%= link_to user_root_path, class: "pure-menu-link" do %>
            <%= t(".account") %>
          <% end %>

          <%= link_to "#" do %>
            Alertas
          <% end %>

          <%= link_to user_sessions_path, method: :delete do %>
            <%= t(".sign_out") %>
          <% end %>
        <% else %>
          <%= link_to new_user_sessions_path, class: "pure-menu-link" do %>
            <i class="fa fa-sign-in"></i>
            <%= t(".sign_in") %>
          <% end %>
        <% end %>

        <div class="language_selector">
          <%= render "layouts/locale_selector" %>
        </div>

      </div>

    </div>

  </div>
</menu>
