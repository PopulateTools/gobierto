<% title t('gobierto_visualizations.layouts.application.gobierto_visualizations.contracts') %>

<div class="column">
  <div class="pure-g block header_block_inline m_b_1">
    <div class="pure-u-1 pure-u-md-18-24 pure-u-lg-12-24">
      <h2 class="with_description">
        <%= t(".title") %>
      </h2>
      <p>
        <%= t(".description", entity_name: current_site.name) %>
      </p>
    </div>
  </div>

  <div class="js-loading">
    <i class="fas fa-spinner fa-spin"></i> <%= t("gobierto_visualizations.shared.loading") %>
  </div>

  <div id="gobierto-visualizations-contracts-app"
       data-site-name="<%= @site.name %>"
       data-logo-url="<%= @site.configuration.logo_with_fallback %>"
       data-home-url="<%= gobierto_visualizations_contracts_summary_url %>"
       data-contracts-endpoint="<%= @visualizations_config.dig('data_urls', 'contracts') %>"
       data-tenders-endpoint="<%= @visualizations_config.dig('data_urls', 'tenders') %>"
       data-data-download-endpoint="<%= @visualizations_config['data_download_source'] %>"
  >
  </div>

</div>

<% content_for :gobierto_footer_content do %>
  <%= javascript_include_tag 'https://unpkg.com/d3@5/dist/d3.js' %>
  <%= javascript_include_tag 'https://unpkg.com/dc@4/dist/dc.js' %>
<% end %>
