<div class="gradient-bg">
  <div class="column">
    <h2 class="with_separator"><%= t('.up_to_date', location_name: current_site.location_name) %></h2>

    <div class="pure-g agenda three_by_three">
      <div class="pure-u-1 pure-u-md-1-3 center">
        <h3 class="agenda_title"><%= t('.agenda') %></h3>
        <div class="p_1  content_block">
          <% if @issue_events.any? %>
            <% @issue_events.each do |event| %>
              <%= render 'gobierto_participation/processes/place_event', { event: event } %>
            <% end %>
          <% else %>
            <%= t('.no_events') %>
          <% end %>
        </div>
        <% if @issue_events.any? %>
          <%= link_to t('.show_more_events'), gobierto_participation_events_path %>
        <% end %>
      </div>

      <div class="pure-u-1 pure-u-md-1-3 center">
        <h3 class="agenda_title"><%= t('.the_last') %></h3>
        <div class="p_1  content_block">
          <% if @issue_news_updated.any? %>
            <% @issue_news_updated.each do |event| %>
              <%= render 'gobierto_participation/processes/place_event', { event: event } %>
            <% end %>
          <% else %>
            <%= t('.no_events') %>
          <% end %>
        </div>
        <% if @issue_news_updated.any? %>
          <%= link_to t('.show_more_updates'), gobierto_participation_events_path %>
        <% end %>
      </div>

      <div class="pure-u-1 pure-u-md-1-3 center">
        <h3 class="agenda_title"><%= t('.news') %></h3>
        <div class="p_1  content_block">
          <% if @issue_news.any? %>
            <% @issue_news.each do |notice| %>
              <%= render 'gobierto_participation/processes/place_news', { notice: notice } %>
            <% end %>
          <% else %>
            <%= t('.no_news') %>
          <% end %>
        </div>
        <% if @issue_news.any? %>
          <%= link_to t('.show_more_news'), gobierto_cms_pages_path %>
        <% end %>
      </div>
    </div>
  </div>
</div>
