<%# This is an example of inheritance %>
<%# This template is called for pages that render when a process is set, for example, when the page belongs to a collection which
container is a process, or when the page is the information page of a process %>

<div class="column">
  <div class="cms_page">
    <main role="main" class="content">
      <div class="pure-g">
        <div class="pure-u-1 pure-u-md-1-4" data-sidebar>
        </div>

        <div class="pure-u-1 pure-u-md-3-4" data-main>

          <article>
            <h1><%= title @page.title %></h1>

            <%== render_liquid(@page.body) %>

            <% if @page.attachments.any? %>
              <div class="page_attachments">
                <h3><%= t("gobierto_participation.shared.documents") %></h3>
                <% @page.attachments.each do |attachment| %>
                  <div class="file">
                    <%= link_to attachment.human_readable_path do %>
                      <div class="icon"><%= filetype_icon(attachment) %></div>
                      <h4><%= attachment.name %></h4>
                      <div class="meta">
                        <%= attachment.extension.upcase %> · <%= number_to_human_size(attachment.file_size, precision: 2, separator: ",") %> · <%= attachment.file_name %>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </article>

        </div>
      </div>
    </main>
  </div>
</div>
