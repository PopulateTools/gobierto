<div class="modal modal-full-width modal-no-padding">
  <div
    dashboard-maker-app
    data-preview-path="<%= params[:preview_path] %>"
    data-context="<%= params[:context] %>"
    data-pipe="<%= params[:pipe] %>"
    <% if params[:id].present? %>
      data-id="<%= params[:id] %>"
    <% end %>
    <% if params[:indicator].present? %>
      data-indicator="<%= params[:indicator] %>"
      data-indicator-context="<%= params[:indicator_context] %>"
    <% end %> />
</div>