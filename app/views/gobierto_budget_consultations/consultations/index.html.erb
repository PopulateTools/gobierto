<div class="column">

  <% if @active_consultations.any? %>

    <h2><%= t('.active') %></h2>

    <div class="active-consultations">

      <% @active_consultations.each do |consultation| %>

        <div class="box p_v_2">

          <div class="inner center">

            <h3>
            <%= link_to consultation do %>
              <%= consultation.title %>
              <%= "(#{t('.already_responded')})" if consultation.already_responded?(current_user) %>
            <% end %>
            </h3>
            <div class="soft">
              <%= l(consultation.opens_on, format: :long).downcase %>
              -
              <%= l(consultation.closes_on, format: :long).downcase %>
            </div>

          </div>

        </div>

      <% end %>

    </div>

  <% end %>

  <% if @past_consultations.any? %>

    <div class="m_v_4">

      <h2><%= t('.previous') %></h2>

      <div class="past-consultations">

        <% @past_consultations.each do |consultation| %>

          <div class="pure-u-1 pure-u-md-2-3">

            <div class="p_h_2">
              <h3>
              <%= link_to consultation do %>
                <%= consultation.title %>
                <%= "(#{t('.already_responded')})" if consultation.already_responded?(current_user) %>
              <% end %>
              </h3>
              <div class="soft">
                <%= l(consultation.opens_on, format: :long).downcase %>
                -
                <%= l(consultation.closes_on, format: :long).downcase %>
              </div>
            </div>

          </div>

        <% end %>

      </div>

    </div>

  <% end %>

  <% disabled do %>
    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-1-2 description">
        <%= render("user/subscriptions/subscribable_box",
                   subscribable: GobiertoBudgetConsultations::Consultation,
                   title: t(".subscribable_box.title")) %>
      </div>
    </div>
  <% end %>

</div>
