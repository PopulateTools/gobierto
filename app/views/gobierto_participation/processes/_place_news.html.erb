<div class="place_news-item place-item pure-g">
  <div class="badge pure-u-1-3 pure-u-md-5-24">
    <strong><%= l(notice.created_at, format: '%e %b').upcase %></strong>
  </div>

  <div class="pure-u-1 pure-u-md-19-24 news-content">
      <h3>
        <% if @process %>
          <%= link_to notice.title, gobierto_participation_process_process_page_path(process_id: @process.slug, id: notice.slug) %>
        <% elsif @issue %>
          <%= link_to notice.title, gobierto_participation_issue_issue_page_path(issue_id: @issue.slug, id: notice.slug) %>
        <% end %>
      </h3>
  </div>
</div>
