<%= render "gobierto_admin/shared/validation_errors", resource: @person_post_form %>

<%= form_for(@person_post_form, as: :person_post, url: @person_post_form.persisted? ? admin_people_person_post_path(@person, @person_post_form) : admin_people_person_posts_path(@person)) do |f| %>

  <div class="pure-g">

    <div class="pure-u-1 pure-u-md-16-24">

      <div class="form_item input_text">
        <%= f.label :title %>
        <%= f.text_field :title, placeholder: t(".placeholders.title") %>
      </div>

      <div class="form_item textarea">
        <%= f.label :body %>
        <%= f.rich_text_area :body, attachment_path: admin_people_file_attachments_path %>
      </div>

      <div class="form_item input_text">
        <%= f.label :tags %>
        <%= f.text_field :tags, placeholder: t(".placeholders.tags") %>
      </div>

    </div>

    <div class="pure-u-1 pure-u-md-2-24"></div>

    <div class="pure-u-1 pure-u-md-1-4 stick_in_parent" id="stick_in_parent">

      <div class="widget_save">

        <div class="form_item person-post-visibility-level-radio-buttons">

          <div class="options compact">
            <%= f.collection_radio_buttons(:visibility_level, @person_post_visibility_levels, :first, :first) do |b| %>
              <div class="option">
                <%= b.radio_button %>
                <%= b.label do %>
                  <span></span>
                  <%= t(".visibility_level.#{b.text}") %>
                <% end %>
              </div>
            <% end %>
          </div>

        </div>

        <%= f.submit class: "button" %>

      </div>

    </div>

  </div>

<% end %>
