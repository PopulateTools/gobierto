<div class="column">
  <div class="cms_page">
    <main class="content">
      <div class="pure-g">

        <div class="pure-u-1 pure-u-lg-3-4">
          <article>
            <h1><%= title @page.title %></h1>

            <%== render_liquid(@page.body) %>

            <div class="note">
              <time>
                <%= l(@page.published_on, format: :long) %>
              </time>
            </div>
          </article>
        </div>

      </div>
    </main>
  </div>
</div>
