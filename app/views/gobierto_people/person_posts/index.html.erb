<% content_for :breadcrumb_current_item do %>
  <strong>
    <%= link_to t('gobierto_people.layouts.menu_subsections.blogs'), gobierto_people_posts_path %>
  </strong>
<% end %>

<div class="column pure-g">

  <div class="pure-u-1 pure-u-md-7-24">

    <div class="agenda-switcher m_v_2">

      <div><strong>Consulta los blogs de...</strong></div>
      <p><small><%= t(".agenda_switcher.subtitle") %></small></p>

      <div class="hidden_options">
        <ul>
          <li><%= link_to 'Cargo 1' %></li>
          <li><%= link_to 'Cargo 2' %></li>
          <li><%= link_to 'Cargo 3' %></li>
          <li><%= link_to 'Cargo 4' %></li>
        </ul>
      </div>

    </div> 
    
    <%= render("user/subscriptions/subscribable_box",
                   subscribable: GobiertoPeople::PersonPost,
                   title: t(".subscribable_box.title")) %>
                   
  </div>

  <div class="pure-u-1 pure-u-md-17-24 main_people_content">

    <div class="person_header block">
      <h2><%= t(".title") %></h2>
    </div>

    <div class="posts-summary person_post-list item-list">

      <%= render partial: "gobierto_people/person_posts/person_post_excerpt", collection: @posts, as: :person_post %>

    </div>

  </div>

</div>
