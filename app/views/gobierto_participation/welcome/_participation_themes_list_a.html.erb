<div class="gradient-bg">
  <div class="column">
    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-1-3">
        <h2 class="with_separator"><%= t('.issues') %></h2>
        <p class="soft">
          <%= t('.intro', location_name: current_site.organization_name) %>
        </p>
        <%= image_tag 'illustrations/forum.svg', class: 'pure-img m_v_1', alt: '' %>
      </div>

      <div class="pure-u-1 pure-u-md-2-3 groups">
        <div class="pure-g three_by_three">
          <% @issues.each do |issue| %>
            <%= render 'gobierto_participation/issues/issue_teaser', issue: issue, meta: true %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
