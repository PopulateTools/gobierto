<div class="column consultation desktop hidden">

  <div class="pure-g">
    <div class="pure-u-1 pure-u-md-1-2">
      <div class="consultation-text mb3">
        <%= image_tag 'illustrations/consultation_2.png', class: 'consultation-img-side' %>

        <p><%= t('.p1') %></p>
        <p><%= t('.p2') %></p>

        <div class="intro-arrow">
          <svg xmlns="http://www.w3.org/2000/svg" width="182" height="51" viewBox="0 0 182 51">
            <g fill="none" fill-rule="evenodd">
              <path stroke="#699EA3" d="M0.15234375,0.703125 C0.15234375,0.703125 46.2767269,42.1612884 176.684237,42.1612884"/>
              <polyline fill="#699EA3" points="167 50.167 182 41.834 167 33.5 167 50.167"/>
            </g>
          </svg>
        </div>
      </div>

      <div class="consultation-step">
        <%= link_to [@consultation, :new_response], class: "consultation-link" do %>
          <div class="bottom-info-small">
            <div class="teaser">
              <h2 class="consultation-q inline-block"><%= t('.start') %></h2>
              <div class="arrow-right"><i class="fa fa-arrow-right" aria-hidden="true"></i></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="pure-u-1 pure-u-md-1-2">
      <div class="consultation-group">
        <% @consultation_items.each do |consultation_item| %>
          <div class="consultation-card">
            <div class="card-title">
              <div class="consultation-title"><%= consultation_item.title %></div>
              <div class="consultation-figure"><%= budget_amount_to_human(consultation_item.budget_line_amount) %></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% content_for :javascript_hook do %>
  <%= javascript_tag do %>
    window.GobiertoBudgetConsultations.consultation_items_controller.index('<%= gobierto_budget_consultations_consultation_new_response_path(@consultation) %>');
  <% end %>
<% end %>
