<%= content_for :body_attributes do %>
  class="theme-participation gobierto_participation"
<% end %>

<div class="gradient-bg">
  <div class="column">
    <div class="pure-g">
      <div class="pure-u-1">
        <a href="participation_themes.html" class="p_1 content_block cover_bottom_left align_bottom_right" style="background-image: url(<%= image_url('illustrations/man_city.jpg') %>)">
          <div>
            <h2>¿Cómo mejorarías la cultura en Alcobendas?</h2>
            <p>Aporta tus ideas y debate con los demás.</p>
          </div>
        </a>
      </div>
    </div>
  </div>
</div>

<%= render 'latest_info' %>

<div class="gradient-bg">
  <div class="column">
    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-1-3">
        <h2 class="with_separator">Procesos en marcha</h2>
        <p class="soft">Consulta y participa en procesos específicos.</p>
      </div>

      <div class="pure-u-1 pure-u-md-2-3 current_processes">
        <div class="pure-g block_container two_by_two">
          <%= render 'current_group', title: 'Pacto social por el fin de la violencia contra la mujer', status: 'presentación' %>
          <%= render 'current_group', title: 'Título del proceso', status: 'ideas' %>
          <%= render 'current_group', title: 'Título del proceso', status: 'debate' %>
          <%= render 'current_group', title: 'Título del proceso', status: 'rendición de cuentas' %>
          <%= render 'current_group', title: 'Título del proceso', status: 'debate' %>
          <%= render 'current_group', title: 'Título del proceso', status: 'ideas' %>
        </div>
      </div>

    </div>
  </div>
</div>

<div class="gradient-bg">
  <div class="column">
    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-1-3">
        <h2 class="with_separator">Grupos de trabajo</h2>
        <p class="soft">Accede a la información de cada grupo.</p>
      </div>

      <div class="pure-u-1 pure-u-md-2-3 groups">
        <div class="pure-g block_container three_by_three">
          <div class="pure-u-1 pure-u-md-1-3">
            <%= render 'theme_teaser', title: 'Cabalgatas', description: 'Descripción del grupo de trabajo dedicado a las cabalgatas', meta: false %>
          </div>

          <div class="pure-u-1 pure-u-md-1-3">
            <%= render 'theme_teaser', title: 'Diseño del Carnaval', description: 'Descripción del grupo de trabajo dedicado al diseño del carnaval', meta: false %>
          </div>

          <div class="pure-u-1 pure-u-md-1-3">
            <%= render 'theme_teaser', title: 'Teatro', description: 'Descripción del grupo de trabajo dedicado a la gestión de teatros', meta: false %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
