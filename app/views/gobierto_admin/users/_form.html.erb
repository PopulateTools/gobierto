<%= render "gobierto_admin/shared/validation_errors", resource: @user_form %>

<%= form_for(@user_form, as: :user, url: admin_user_path(@user_form)) do |f| %>

  <div class="pure-g">

    <div class="pure-u-1 pure-u-md-16-24">

      <div class="form_item input_text">
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: t(".placeholders.name") %>
      </div>

      <div class="form_item input_text">
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: t(".placeholders.email") %>
      </div>

      <%= render(
        partial: "gobierto_admin/gobierto_common/custom_fields/forms/custom_fields",
        locals: {
          f: f,
          item: @custom_fields_form,
          form_name: f.object_name
        }
      ) %>

      <div class="form_block">

        <h2><%= t(".password_block") %></h2>

        <div class="pure-g">
          <div class="pure-u-1 pure-u-md-1-2">
            <%= link_to new_admin_user_passwords_path(@user), class: "button" do %>
              <%= t(".change_password") %>
            <% end %>
          </div>
          <div class="pure-u-1 pure-u-md-1-2">
            <%= link_to admin_user_welcome_messages_path(@user), method: :post, class: "button", data: { confirm: "Are you sure?" } do %>
              <%= t(".resend_welcome_email") %>
            <% end %>
            <p><small>(<%= t(".resend_welcome_email_notes") %>)</small></p>
          </div>
        </div>

        <%= render "session_information", user: @user %>

      </div>

    </div>

    <div class="pure-u-1 pure-u-md-2-24"></div>

    <%= render partial: 'gobierto_admin/shared/save_widget', locals: { f: f, levels: [] } %>

  </div>

<% end %>
