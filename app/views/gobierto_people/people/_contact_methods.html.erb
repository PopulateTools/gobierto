<div class="contact-methods">
  <ul>
  
  <% if @person.contact_email %>
    <li>
      <%= mail_to @person.contact_email, target: 'blank' do %>
        <i class="fa fa-envelope"></i> <span><%= @person.contact_email %></span>
      <% end %>
    </li>
  <% end %>

  <% if @person.twitter_url %>
    <li>
      <%= link_to @person.twitter_url, target: 'blank' do %>
        <i class="fa fa-twitter"></i> <span><%= @person.twitter_handle %></span>
      <% end %>
    </li>
  <% end %>

  <% if @person.facebook_url %>
    <li>
      <%= link_to @person.facebook_url, target: 'blank' do %>
        <i class="fa fa-facebook"></i> <span><%= @person.facebook_handle %></span>
      <% end %>
    </li>
  <% end %>

  <% if @person.twitter_url %>
    <li>
      <%= link_to @person.linkedin_url, target: 'blank' do %>
        <i class="fa fa-linkedin"></i> <span><%= @person.linkedin_handle %></span>
      <% end %>
    </li>
  <% end %>

  </ul>
</div>
