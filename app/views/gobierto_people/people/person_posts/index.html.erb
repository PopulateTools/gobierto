<%= render "gobierto_people/people/content_for_breadcrumb" %>

<div class="blog_header">
  <%= t(".title", person_name: @person.name, person_charge: @person.charge) %>
</div>

<div class="posts-summary">

  <% if @posts.any? %>
    <%= render partial: "gobierto_people/person_posts/person_post_excerpt", collection: @posts, as: :person_post %>
  <% else %>
    <p><%= t('.no_posts') %></p>
  <% end %>

</div>
