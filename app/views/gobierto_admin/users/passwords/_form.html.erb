<%= render "gobierto_admin/shared/validation_errors", resource: @user_password_form %>

<%= form_for(@user_password_form, as: :user_password, url: admin_user_passwords_path(@user)) do |f| %>

  <div class="pure-g">

    <div class="pure-u-1 pure-u-md-16-24">

      <h2><%= @user.name %></h2>

      <div class="form_item input_text">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div class="form_item input_text">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </div>

    </div>

    <div class="pure-u-1 pure-u-md-2-24"></div>

    <div class="pure-u-1 pure-u-md-1-4 stick_in_parent" id="stick_in_parent">

      <div class="widget_save">

        <%= f.submit t(".submit"), class: "button" %>

      </div>

    </div>

  </div>

<% end %>
