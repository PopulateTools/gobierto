<%= render "gobierto_people/people/content_for_breadcrumb" %>

<div class="pure-g">

  <div class="pure-u-1 pure-u-md-7-24">

    wadus

  </div>

  <div class="pure-u-1 pure-u-md-17-24 main_people_content">

    <div class="person_header block">
      <h2><%= t(".title", person_name: @person.name) %></h2>
    </div>

    <div class="statements-summary person_statement-list item-list">

      <% if @statements.any? %>
        <%= render @statements %>
      <% else %>
        <p><%= t('.no_statements') %></p>
      <% end %>

    </div>

  </div>

</div>
