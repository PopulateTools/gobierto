<% content_for :stylesheet_module_link do %>
  <%= stylesheet_packs_with_chunks_tag 'dashboards' %>
<% end %>

<div class="admin_breadcrumb">
  <%= link_to t("gobierto_admin.welcome.index.title"), admin_root_path %> »
  <%= link_to t("gobierto_admin.gobierto_plans.plans.index.title"), admin_plans_plans_path %> »
  <%= @plan.title %>
</div>

<h1><%= @plan.title %></h1>

<%= render 'gobierto_admin/gobierto_plans/shared/navigation' %>

<% if current_admin_actions.include? :new %>
  <div class="admin_tools left">
    <%= link_to t(".new"), new_admin_plans_plan_dashboard_path(@plan), data: { turbolinks: false }, class: "open_remote_modal button" %>
  </div>
<% end %>

<table id="dashboards">
  <tr>
    <th class="icon"></th>
    <th><%= t(".headers.title") %></th>
    <th><%= t(".headers.status") %></th>
    <th></th>
    <th></th>
  </tr>

  <% @dashboards.each do |dashboard| %>
    <tr id="<%= "dashboard-item-#{dashboard.id}" %>">
      <td>
        <% if current_admin_actions.include?(:edit) %>
          <%= link_to edit_admin_dashboards_dashboard_path(dashboard), data: { turbolinks: false, "dashboards-maker": true }, class: "open_remote_modal" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </td>
      <td>
        <% if current_admin_actions.include?(:edit) %>
          <%= link_to edit_admin_dashboards_dashboard_path(dashboard), data: { turbolinks: false, "dashboards-maker": true }, class: "open_remote_modal" do %>
            <%= dashboard.title %>
          <% end %>
        <% end %>
      </td>
      <td>
        <% if dashboard.draft? %>
          <i class="fas fa-lock"></i>
        <% else %>
          <i class="fas fa-check"></i>
        <% end %>
        <%= t(".visibility_level.#{dashboard.visibility_level}") %>
      </td>
      <td>
        <%= link_to admin_dashboards_dashboard_path(dashboard), data: { turbolinks: false }, class: "open_remote_modal view_item" do %>
          <i class="fas fa-eye"></i>
          <%= t(".view_dashboard") %>
        <% end %>
      </td>
      <td>
        <% unless dashboard.draft? %>
          <%= link_to "#", target: "_blank", class: "view_item" do %>
            <i class="fas fa-eye"></i>
            <%= t(".view_public_dashboard") %>
          <% end %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
