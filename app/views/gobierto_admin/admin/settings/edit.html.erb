<h1><%= t(".title") %></h1>

<%= render "gobierto_admin/shared/validation_errors", resource: @admin_settings_form %>

<%= form_for(@admin_settings_form, as: :admin, url: admin_admin_settings_path) do |f| %>

  <div class="pure-g">

    <div class="pure-u-1 pure-u-md-16-24">

      <div class="form_item input_text">
        <%= label_tag "admin[name]" do %>
          <%= t("activemodel.attributes.gobierto_admin/admin_form.name") %>
          <span class="indication"><%= t('views.forms.required') %></span>
        <% end %>
        <%= f.label :name, t("activemodel.attributes.gobierto_admin/admin_form.name") %>
        <%= f.text_field :name, placeholder: t(".placeholders.name") %>
      </div>

      <div class="form_item input_text">
        <%= label_tag "admin[email]" do %>
          <%= t("activemodel.attributes.gobierto_admin/admin_form.email") %>
          <span class="indication"><%= t('views.forms.required') %></span>
        <% end %>
        <%= f.email_field :email, placeholder: t(".placeholders.email") %>
      </div>

      <div class="form_block">

        <h2><%= t(".password_block") %></h2>

        <div class="form_item input_text">
          <%= f.label :password, t("activemodel.attributes.gobierto_admin/admin_form.password") %>
          <%= f.password_field :password %>
        </div>

        <div class="form_item input_text">
          <%= f.label :password_confirmation, t("activemodel.attributes.gobierto_admin/admin_form.password_confirmation") %>
          <%= f.password_field :password_confirmation %>
        </div>

      </div>

      <%= f.submit class: "button" %>
    </div>

  </div>

<% end %>
