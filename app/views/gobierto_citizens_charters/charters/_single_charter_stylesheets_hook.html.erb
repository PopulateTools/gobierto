<% charter_color = custom_field_by_uid(@charter, "background-color").present? ? custom_field_by_uid(@charter, "background-color")[1..-1].scan(/../).map {|color| color.hex}.join(",") : "var(--color-base-string)" %>
<%= content_for :gobierto_head_content do %>
  <style type="text/css">
    .gobierto_citizens-charters .charter-header {
      background-color: rgb(<%= charter_color %>);
    }
    .gobierto_citizens-charters .charter-inner,
    .gobierto_citizens-charters .sparkline svg {
      background-color: rgba(<%= charter_color %>, 0.1);
    }
    .gobierto_citizens-charters .charter-inner:hover {
      background-color: rgba(<%= charter_color %>, 0.2);
    }
    .gobierto_citizens-charters .sparkline path {
      stroke: rgb(<%= charter_color %>);
    }
    .gobierto_citizens-charters .sparkline .axis line {
      stroke: rgb(<%= charter_color %>, 0.1);
    }
  </style>
<% end %>
