<div class="person_statement-item person-item pure-g">

  <div class="pure-u-md-1-3">

    <% if person_statement.person.avatar_url.present? %>
      <%= link_to image_tag(person_statement.person.avatar_url, height: 30, width: 30, class: 'v_top', alt: person_statement.person.name , title: 'Avatar de ' + person_statement.person.name), person_statement.person.slug %>
    <% end %>

    <%= link_to person_statement.person.name, gobierto_people_person_path(person_statement.person.slug) %>

  </div>

  <div class="pure-u-md-2-3">

    <h3><%= link_to person_statement.title, gobierto_people_person_statement_path(person_statement.person.slug, person_statement.slug) %></h3>
    <div class="soft"><small><%= l(person_statement.published_on, format: :long) %></small></div>

  </div>

</div>
