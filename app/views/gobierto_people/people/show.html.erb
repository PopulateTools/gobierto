<% description(@person.bio) %>

<%= render "gobierto_people/people/content_for_breadcrumb" %>

<div class="column">

  <div class="pure-g">

    <div class="pure-u-1 pure-u-md-7-24">

      <% if @person.avatar_url.present? %>
        <h2 class="avatar-title"><%= image_tag @person.avatar_url, height: 250, width: 250, alt: @person.name, class: "avatar" %></h2>
      <% end %>

      <%= render("gobierto_people/people/subscription_button", person: @person) %>

      <%= render "contact_methods" %>

      <div class="separator"></div>

      <%= render "gobierto_people/people/navigation" %>

    </div>

    <div class="pure-u-1 pure-u-md-17-24 main_people_content">

      <div class="person_header">

        <h2><%= title @person.name %></h2>

        <div class="person_charge"><%= @person.charge %></div>
        <div class="person_party"><%= t(".party.#{@person.party}") %></div>
        <% if @person.political_group %>
          <div class="political_group"><%= @person.political_group.name %></div>
        <% end %>
      </div>

      <%= render "upcoming_events" %>
      <%= render("user/subscriptions/subscribable_box",
                 subscribable: @person,
                 title: t(".subscribable_box.title", person_name: @person.name)) %>
      <%= render "latest_activity" %>

    </div>

  </div>

</div>
