<div class="admin_breadcrumb">
  <%= link_to t("gobierto_admin.welcome.index.title"), admin_root_path %> Â»
  <%= t(".title") %>
</div>

<h1><%= t(".title") %></h1>

<div class="admin_tools right">
  <%= link_to admin_people_configuration_political_groups_path do %>
    <i class="fa fa-cog"></i>
    <%= t(".configuration") %>
  <% end %>
  <%= link_to t(".new"), new_admin_people_person_path, class: "button" %>
</div>

<table class="people-list">
  <thead>
    <tr>
      <th></th>
      <th><%= t(".header.person") %></th>
      <th><%= t(".header.charge") %></th>
      <th><%= t(".header.events") %></th>
      <th><%= t(".header.statements") %></th>
      <th><%= t(".header.posts") %></th>
      <th><%= t(".header.status") %></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody data-behavior="sortable" data-sortable-target="<%= admin_people_people_sort_path %>">
  <% @people.each do |person| %>
    <tr id="person-item-<%= person.id %>" data-id="<%= person.id %>" class="<%= cycle("odd", "even") %>">
      <td>
        <%= link_to edit_admin_people_person_path(person) do %>
          <i class="fa fa-edit"></i>
        <% end %>
      </td>
      <td>
        <%= link_to edit_admin_people_person_path(person) do %>
          <%= person.name %>
        <% end %>
      </td>
      <td>
        <%= person.charge %>
      </td>
      <td>
        <%= person.events_count %>
      </td>
      <td>
        <%= person.statements_count %>
      </td>
      <td>
        <%= person.posts_count %>
      </td>
      <td class="visibility_level">
        <% if person.draft? %>
          <i class="fa fa-lock"></i>
        <% else %>
          <i class="fa fa-check"></i>
        <% end %>
        <%= t(".visibility_level.#{person.visibility_level}") %>
      </td>
      <td>
        <%= link_to gobierto_people_person_url(person, domain: current_site.domain), target: "_blank", class: "view_item" do %>
          <i class="fa fa-eye"></i>
          <%= t(".view_person") %>
        <% end %>
      </td>
      <td><i class="sort-handler fa fa-bars f_right tipsit" title="Arrastra para reordenar"></i></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= javascript_tag do %>
  window.GobiertoAdmin.people_controller.index();
<% end %>
