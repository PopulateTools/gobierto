  <%= link_to t("gobierto_admin.welcome.index.title"), admin_root_path %> Â»
  <%= t(".title") %>
</div>

<h1><%= t(".title") %></h1>

<div class="tabs">
  <ul>
    <li class="active">
      <%= link_to t("gobierto_admin.gobierto_observatory.configuration.settings.title"),
            edit_admin_observatory_configuration_settings_path %>
    </li>
  </ul>
</div>
<%= form_for @settings_form, as: :gobierto_observatory_settings,
      url: admin_observatory_configuration_settings_path, method: :patch,
      html: { autocomplete: "off" } do |f| %>
  <div class="pure-g">
    <div class="pure-u-1 pure-u-md-16-24">

      <div class="form_block">
        <div class="form_item textarea">
          <%= label_tag "gobierto_observatory_settings[observatory_config]" do %>
            <%= t("activemodel.attributes.gobierto_admin/gobierto_observatory/settings_form.observatory_config") %>

            <%= attribute_indication_tag required: true %>
          <% end %>
          <%= f.text_area :observatory_config %>
        </div>
      </div>
    </div>

    <div class="pure-u-1 pure-u-md-2-24"></div>

    <div class="pure-u-1 pure-u-md-1-4 ">
      <div class="widget_save stick_in_parent">
        <%= f.submit t(".update"), class: "button" %>
      </div>
    </div>
  </div>
<% end %>
