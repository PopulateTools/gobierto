<div class="timeline_row <%= class_names %>">
  <div class="pure-u-1 pure-u-md-4-24">
    <div class="badge">
      <strong><%= date %></strong>
    </div>
  </div>

  <div class="pure-u-1 pure-u-md-2-24 timeline_separator"></div>

  <div class="pure-u-1 pure-u-md-18-24">
    <div class="p_1 content_block">
      <h3 class="toggle_description"><i class="fa fa-caret-right"></i> <%= title %></h3>

      <div class="circle"><%= number %></div>

      <div class="description">
        <%= description %>
      </div>

      <% if status === 'open' %>
        <a href="#">Acceder a esta fase</a>
      <% else %>
        <i>Fase pendiente de inicio</i>
      <% end %>

    </div>
  </div>
</div>
