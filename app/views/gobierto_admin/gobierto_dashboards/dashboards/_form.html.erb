<%= render "gobierto_admin/shared/validation_errors", resource: @dashboard_form %>

<%= form_for(@dashboard_form, as: :dashboard, url: @dashboard_form.persisted? ? admin_dashboards_dashboard_path(@dashboard_form) : admin_dashboards_dashboards_path, data: { "globalized-form-container" => true }) do |f| %>
  <div class="pure-g">
    <div class="pure-u-1 pure-u-md-16-24">
      <div class="globalized_fields">
        <%= render "gobierto_admin/shared/form_locale_switchers" %>

        <% current_site.configuration.available_locales.each do |locale| %>
          <div class="form_item input_text" data-locale="<%= locale %>">
            <%= label_tag "dashboard[title_translations][#{locale}]" do %>
              <%= f.object.class.human_attribute_name(:title) %>
              <%= attribute_indication_tag required: true %>
            <% end %>
            <%= text_field_tag "dashboard[title_translations][#{locale}]", f.object.title_translations && f.object.title_translations[locale], placeholder: t(".placeholders.title", locale: locale) %>
          </div>
        <% end %>
      </div>
    </div>

    <%= hidden_field_tag "dashboard[context]", @context %>
    <%= hidden_field_tag "index_path", index_path %>

    <div class="pure-u-1 pure-u-md-2-24"></div>

    <%= render partial: "gobierto_admin/shared/save_widget", locals: { f: f, levels: @dashboard_form.available_visibility_levels } %>
  </div>
<% end %>
