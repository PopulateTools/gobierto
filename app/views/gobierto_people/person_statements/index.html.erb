<div class="column pure-g">

  <div class="pure-u-1 pure-u-md-7-24">

    <div class="agenda-switcher m_v_2">

      <div><strong><%= t('.switcher.title') %></strong></div>
      <p><small><%= t(".switcher.subtitle") %></small></p>

      <div class="hidden_options">
        <% @people.each do |person| %>
        <ul>
          <li><%= link_to person.name, gobierto_people_person_statements_path(person.slug) %></li>
        </ul>
        <% end %>
      </div>

    </div>

    <% disabled do %>
      <%= render("user/subscriptions/subscribable_box",
                     subscribable: GobiertoPeople::PersonStatement,
                     title: t(".subscribable_box.title")) %>
    <% end %>
  </div>

  <div class="pure-u-1 pure-u-md-17-24 main_people_content">

    <div class="person_header block">
      <h2><%= title t(".title") %></h2>
    </div>

    <div class="statements-summary person_statement-list item-list">

      <%= render @statements %>

    </div>

  </div>

</div>

<% description([title, t("gobierto_people.layouts.application.title"), @site.title].compact.join('. ')) %>
