$("#check_participation_start").hide();
$("#check_participation_results").hide();
$("#check_participation_results").html('');

$("#check_participation").html('<%=j render "check_participation" %>');
$("#check_participation").show();
$("#check_participation input:text").focus();

$('[data-serch-document-number]').on('click', function(e){
  e.preventDefault();
  $.ajax({
    dataType: 'script',
    beforeSend: function(xhr){
      xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'));
    },
    url: "<%= admin_budget_consultation_consultation_responses_path(@consultation) %>/" + $('#document_number').val()
  });
});
