<% title(t("gobierto_people.layouts.application.title")) %>
<% description([t("gobierto_people.layouts.application.title"), @site.title].join('. ')) %>

<div class="column">

  <div class="pure-g">

    <div class="pure-u-1 pure-u-md-1-2 p_h_r_2">

      <p class="intro "><%= @home_text %></p>

    </div>

    <div class="pure-u-1 pure-u-md-1-2 p_h_l_2">

      <%= render("user/subscriptions/subscribable_box",
                 subscribable: GobiertoPeople::PersonEvent,
                 title: t(".subscribable_box.title")) %>
    </div>

  </div>

  <div class="pure-g">

    <div class="pure-u-1 pure-u-md-1-2 p_h_r_2">

      <div class="people-summary person-list item-list">
        <div class="block">
          <h2><%= t(".people_summary.title", site_name: current_site.name) %></h2>
        </div>

        <%= render "gobierto_people/people/people_filter" %>
        <%= render @people %>

        <%= link_to t(".people_summary.view_all"), gobierto_people_people_path, class: "see_more" %>

      </div>

    </div>

    <div class="pure-u-1 pure-u-md-1-2 p_h_l_2">

      <div class="events-summary person_event-list item-list">

        <div class="block">
          <h2><%= t(".events_summary.upcoming_events") %></h2>
          <%= link_to t(".events_summary.past_events"), gobierto_people_past_events_path, class: 'to_r' %>
        </div>

        <%= render @events %>

        <%= link_to t(".events_summary.view_all"), gobierto_people_events_path, class: "see_more" %>

      </div>

    </div>

  </div>

  <div class="m_v_4">
    <div class="separator"></div>
  </div>

  <div class="pure-g">

    <div class="pure-u-1 pure-u-md-1-2 site-references p_h_r_2">

      <div class="box fully_linked">
        <%= link_to gobierto_people_statements_path do %>
          <i class="fa fa-money"></i>
          <%= t(".statements") %>
        <% end %>
      </div>

      <div class="box fully_linked">
        <%= link_to gobierto_people_gifts_path do %>
          <i class="fa fa-gift"></i>
          <%= t(".gifts") %>
        <% end %>
      </div>

      <div class="box fully_linked">
        <%= link_to gobierto_people_travels_path do %>
          <i class="fa fa-plane"></i>
          <%= t(".travels") %>
        <% end %>
      </div>

    </div>

    <div class="pure-u-1 pure-u-md-1-2 p_h_l_2">

      <div class="block">
        <h2 class="slim"><%= t(".posts_summary.title") %></h2>
      </div>

      <div class="posts-summary person_post-list item-list">

        <%= render @posts %>

        <%= link_to t(".posts_summary.view_all"), gobierto_people_posts_path, class: "see_more" %>

      </div>

    </div>

  </div>

</div>
