<% content_for :javascript_module_link do %>
  <%= javascript_include_tag 'cms', 'data-turbolinks-track': true %>
<% end %>

<% content_for :stylesheet_module_link do %>
  <%= stylesheet_link_tag 'cms' %>
<% end %>

<% cache_service_fragment(["gobierto_cms/pages/meta_welcome", I18n.locale]) do %>
  <% title(@page.title) %>
  <% description(truncate(strip_tags(@page.body), length: 100)) %>

  <%= render @page.template %>
<% end %>
